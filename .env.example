# Database
# SQLAlchemy connection string. Example for local SQLite (file):
# DATABASE_URL=sqlite:///./dev.db
# Example for Postgres:
# DATABASE_URL=postgresql://user:password@localhost:5432/strava_roundup
DATABASE_URL=

# Strava OAuth
# Get these from your Strava developer application settings
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
# Redirect URI must match the one configured in Strava app. In dev this typically points to the backend's callback route.
# Example: http://localhost:8000/auth/strava/callback
STRAVA_REDIRECT_URI=

# Frontend callback URL (where the backend redirects after successful token exchange)
# Defaults to http://localhost:5173/auth/callback when not set
FRONTEND_CALLBACK_URL=

# Optional: disable sending requests to external APIs during development by setting DEBUG flags
# (Project currently doesn't read this variable, but it's handy to include)
# DEBUG=true
